<div class="form-signin w-100 m-auto text-center" style="max-width: 540px;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%# <img class="mb-4" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQnw129kaVvYNqP5YnDQS7mTSXGfguCRgs17z-fhdaam96IP7U2zo6UVSb9pC4Lzs5B8rI&usqp=CAU" alt="" width="72" height="57"> %>
    <h1 class="h3 mb-3 fw-normal">Forgot your password?</h1>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
      <%= f.label :email, 'Email address', for:"floatingInput" %>
    </div>

    <%= f.submit "Send me reset password instructions", class:"w-100 btn btn-lg btn-primary my-3" %>
    
    <p class="mt-5 mb-3 text-muted">
      <%= render "devise/shared/links" %>
    </p>
  <% end %>
</div>
