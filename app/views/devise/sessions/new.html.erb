<div class="form-signin w-100 m-auto text-center" style="max-width: 540px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%# <img class="mb-4" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQnw129kaVvYNqP5YnDQS7mTSXGfguCRgs17z-fhdaam96IP7U2zo6UVSb9pC4Lzs5B8rI&usqp=CAU" alt="" width="72" height="57"> %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <%= f.text_field :login, autofocus: true, autocomplete: "login", class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
      <%= f.label :login, 'Username or email address or phone number', for:"floatingInput" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
      <%= f.label :password, 'Password', for:"floatingPassword" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me, value:"remember-me" %> Remember me
        </label>
      </div>
    <% end %>

    <%= f.submit "Log in", class:"w-100 btn btn-lg btn-primary" %>

    <p class="mt-5 mb-3 text-muted">
      <%= render "devise/shared/links" %>
    </p>
  <% end %>
</div>
