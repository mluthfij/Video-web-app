<div class="form-signin w-100 m-auto text-center" style="max-width: 540px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%# <img class="mb-4" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQnw129kaVvYNqP5YnDQS7mTSXGfguCRgs17z-fhdaam96IP7U2zo6UVSb9pC4Lzs5B8rI&usqp=CAU" alt="" width="72" height="57"> %>
    <h1 class="h3 mb-3 fw-normal">Sign up here</h1>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
      <%= f.label :email, 'Email address', for:"floatingInput" %>
    </div>

    <div class="form-floating">
      <%= f.text_field :username, class:"form-control", id:"floatingInput", placeholder:"username" %>
      <%= f.label :username, 'Username', for:"floatingInput" %>
    </div>

    <%#  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%#  %>
    <div class="form-floating">
      <%= f.password_field :password, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
      <%= f.label :password, 'Password', autocomplete: "new-password", for:"floatingPassword" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
      <%= f.label :password_confirmation, 'Password', autocomplete: "new-password", for:"floatingPassword" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me, value:"remember-me" %> Remember me
        </label>
      </div>
    <% end %>

    <%= f.submit "Sign up", class:"w-100 btn btn-lg btn-primary" %>

    <p class="mt-5 mb-3 text-muted">
      <%= render "devise/shared/links" %>
    </p>
  <% end %>
</div>
