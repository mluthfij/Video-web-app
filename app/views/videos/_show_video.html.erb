<div id="<%= dom_id video %>">
    <div class="row row-cols-1 row-cols-md-2 g-4">
    <%# <div class="row"> %>
        <div class="col col-md-8">
            <iframe class="w-100" height="315" src="https://www.youtube.com/embed/V5KrD7CmO4o" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            <h3 class="mt-2">
                <strong>
                    <%= video.title %>
                </strong>
            </h3>
            <div class="my-2">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ9V5MTQFdNvm0yEthq7Xyz9fO5bBwSFjm0lQ&usqp=CAU"
                class="rounded-circle" style="height:50px; width:50px; object-fit:fill;" alt="...">
                <%= video.user.email %>
            </div>
            <div class="card my-3" style="background:var(--bs-dark-border-subtle);">
                <div class="card-body">
                    <%= time_ago_in_words(video.user.created_at) %> ago
                    <%#  %>
                    <div class="collapse" id="collapseExample">
                        <%= simple_format(video.body) %>
                    </div>
                    <p>
                        <a class="text-decoration-none" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Expand description
                        </a>
                    </p>
                    <%#  %>
                </div>
            </div>
        </div>
        <div class="col col-md-4">
            <div id="videos">
                <% @videos.order(id: :desc).each do |video| %>
                <div class="card border border-0">
                    <%= render 'videos/show_video_list',video: video %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>