<% if user_signed_in? && @video.user.id == current_user.id %>
<div class="row mb-2 g-1">
  <div class="col">
    <%= link_to "Edit this video", edit_video_path(@video), class:"btn btn-custom w-100" %>
  </div>
  <div class="col">
    <%= button_to "Destroy this video", @video, method: :delete, class:"btn btn-custom w-100" %>
  </div>
</div>
<% end %>

<%= render 'videos/show_video', video: @video %>
