<%= content_tag "div", id: "downvote-#{video.id}" do %>
  <%= link_to downvote_video_path(video), remote: true, data: { turbo_disable_with: "voting...", turbo_method: :patch } do %>
    <% if current_user.voted_down_on? video %>
      unvote
    <% else %>
      downvote!
    <% end %>
  <% end %>
<% end %>