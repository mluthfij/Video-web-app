<div id="videos">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @videos.order(id: :desc).each do |video| %>
      <div class="col">
        <div class="card h-100">
          <%= link_to video, class:"text-decoration-none" do %>
            <div class="card border border-0">
              <img src="https://img.freepik.com/premium-vector/modern-minimal-404-error-page-website-404-error-page-found-with-dead-ghost-concept_599740-702.jpg?w=2000" class="img rounded" alt="...">
                <div class="card-body">
                  <%= render video %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
